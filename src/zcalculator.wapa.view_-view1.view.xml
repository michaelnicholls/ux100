<mvc:View controllerName="p1.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" displayBlock="true"                                                                                               
	xmlns="sap.m">                                                                                                                                                                                                                                                
	<App>                                                                                                                                                                                                                                                         
		<pages>                                                                                                                                                                                                                                                      
			<Page title="{i18n>title}">                                                                                                                                                                                                                                 
				<content>                                                                                                                                                                                                                                                  
<!--					<l:Grid vSpacing="0"> -->                                                                                                                                                                                                                             
	<l:HorizontalLayout class="sapUiContentPadding" >                                                                                                                                                                                                             
					<Input id="op1" maxLength="4" width="100px" value="{/operand1}"  />                                                                                                                                                                                       
					<Input id="op" maxLength="1" width="50px" value="{/operator}" />                                                                                                                                                                                          
					<Input id="op2" maxLength="4" width="100px" value="{/operand2}" />                                                                                                                                                                                        
					<Input id="result" value ="{/result}" width="100px"  enabled="false" />                                                                                                                                                                                   
					<Input id="error" width="200px"  enabled="false"  value="{/error}" />                                                                                                                                                                                     
					<Button press="onGo" text="go"/>                                                                                                                                                                                                                          
<!--				</l:Grid> -->                                                                                                                                                                                                                                          
</l:HorizontalLayout>                                                                                                                                                                                                                                          
				</content>                                                                                                                                                                                                                                                 
				                                                                                                                                                                                                                                                           
			</Page>                                                                                                                                                                                                                                                     
		</pages>                                                                                                                                                                                                                                                     
	</App>                                                                                                                                                                                                                                                        
</mvc:View>                                                                                                                                                                                                                                                    