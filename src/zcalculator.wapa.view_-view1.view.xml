<mvc:View controllerName="p1.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"                                                                                                                   
	displayBlock="true" xmlns="sap.m">                                                                                                                                                                                                                            
	<App>                                                                                                                                                                                                                                                         
		<pages>                                                                                                                                                                                                                                                      
			<Page title="{i18n>title} (source: {ops>/source})">                                                                                                                                                                                                         
				<content>                                                                                                                                                                                                                                                  
					<!--					<l:Grid vSpacing="0"> -->                                                                                                                                                                                                                        
					<l:HorizontalLayout class="sapUiContentPadding">                                                                                                                                                                                                          
						<Input id="op1" type="Number" placeholder="Operand1" maxLength="4" width="100px" value="{/operand1}" change="onGo"/>&nbsp;                                                                                                                               
						<RadioButtonGroup buttons="{ops>/ops}" id="op" select ="onGo">                                                                                                                                                                                           
							<RadioButton text="{ops>op}"/>                                                                                                                                                                                                                          
						</RadioButtonGroup>                                                                                                                                                                                                                                      
						<Input id="op2" type="Number" placeholder="Operand2" maxLength="4" width="100px" value="{/operand2}" change="onGo"/>                                                                                                                                     
						<Input id="result" value="{/res}" width="100px" enabled="false"/>&nbsp;                                                                                                                                                                                  
				                                                                                                                                                                                                                                                           
						<Input id="error" width="300px" enabled="false" value="{/error}"/>                                                                                                                                                                                       
						<Button press="onCopy" text="Copy" tooltip="Copy result to operand1"/>&nbsp;                                                                                                                                                                             
						<Button press="onGo" text="="/>&nbsp;                                                                                                                                                                                                                    
					                                                                                                                                                                                                                                                          
						<!--				</l:Grid> -->                                                                                                                                                                                                                                    
					</l:HorizontalLayout>                                                                                                                                                                                                                                     
				</content>                                                                                                                                                                                                                                                 
			</Page>                                                                                                                                                                                                                                                     
		</pages>                                                                                                                                                                                                                                                     
	</App>                                                                                                                                                                                                                                                        
</mvc:View>                                                                                                                                                                                                                                                    